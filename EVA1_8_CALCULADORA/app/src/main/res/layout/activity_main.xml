            android:text="MS" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#97CE574E"
            android:text="M*" />
    </LinearLayout>

    <LinearLayout
